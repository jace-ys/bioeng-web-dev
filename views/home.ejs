<% include partials/header %>
<link rel="stylesheet" href="/stylesheets/home.css">
<div class="jumbotron jumbotron-fluid text-center mb-0">
  <h3>Your current patients</h3>
  <a class="btn btn-primary mt-2" href="/patients/new">Add new patient</a>
</div>
<div class="container content">
  <div class="patient-grid">
    <div class="row">
      <% for(let i = 0; i < 4; i++) { %>
      <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="card border-danger">
          <div class="card-header">Ward</div>
          <img class="card-img-top" src="https://image.flaticon.com/icons/svg/236/236832.svg" alt="Patient Photo">
          <div class="card-body">
            <h5 class="card-title">Patient Name</h5>
            <p class="card-text">Diagnosis</p>
          </div>
          <div class="card-footer">
            <small class="text-muted">Admitted on:</small>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="card border-danger">
          <div class="card-header">Ward</div>
          <img class="card-img-top" src="https://image.flaticon.com/icons/svg/201/201634.svg" alt="Patient Photo">
          <div class="card-body">
            <h5 class="card-title">Patient Name</h5>
            <p class="card-text">Diagnosis</p>
          </div>
          <div class="card-footer">
            <small class="text-muted">Admitted on:</small>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>

<% include partials/scripts %>
<% include partials/footer %>
